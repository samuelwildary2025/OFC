# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Database
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB_NAME?schema=public

# Redis
REDIS_URL=redis://HOST:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Admin
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_TOKEN=your-admin-token-for-global-operations

# Logs
LOG_LEVEL=info

# Webhooks
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3

# WhatsApp
WA_SESSION_PATH=./sessions
WA_MAX_INSTANCES=10

# Whatsmeow Service (Go microservice)
WHATSMEOW_URL=http://localhost:8081

# Backend Selection
# true = usar whatsmeow (Go) - mais leve, sem Chromium
# false = usar whatsapp-web.js (Puppeteer) - original
USE_WHATSMEOW=false

# Facebook / Meta App (Embedded Signup)
FB_APP_ID=
FB_APP_SECRET=
FB_API_VERSION=v19.0
